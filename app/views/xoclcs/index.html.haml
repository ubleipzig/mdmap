- model_class = Xoclc
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:edition_id)
      %th= model_class.human_attribute_name(:oclc_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @xoclcs.each do |xoclc|
      %tr
        %td= link_to xoclc.id, xoclc_path(xoclc)
        %td= xoclc.edition_id
        %td= xoclc.oclc_id
        %td=l xoclc.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_xoclc_path(xoclc), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), xoclc_path(xoclc), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
